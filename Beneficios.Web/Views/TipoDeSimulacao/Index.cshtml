@using TestesBeneficios.Domain.DTO
@model SimulacaoDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beneficios.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Beneficios.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body class="bg-black">
    <div class="container-fluid ">
        <header>
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar bg-black">
                        <div class="container-fluid bg-black">
                            <a class="navbar-brand text-light" href="#">
                                <img src="~/images/logo.svg" alt="logo"
                                     alt="Logo" width="30" height="24" class="d-inline-block align-text-top text-light">
                                Bootstrap
                            </a>
                            <ul class="nav justify-content-end">
                                <li class="nav-item text-light">
                                    <a asp-action="Index" asp-controller="Login" class="nav-link active" aria-current="page">Login</a>
                                </li>
                                <li class="nav-item text-light">
                                    <a asp-action="Cadastro" asp-controller="Login" class="nav-link">Crie sua Conta</a>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

        </header>
        <div class="container bg-dark mt-4 px3 rounded-4 ">
            <div class="row">
                <div class="col-md-12 text-light py-2 border-bottom border-secondary">
                    <h4>Escolha o tipo de simulacao</h4>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-4 text-center border-bottom border-secondary  bg-transparent py-3">
                    <p class="h4 text-light">
                        Plano Individual/Familiar
                    </p>
                    <p class="pt-3 text-light-emphasis">
                        Simule aqui o plano de saúde ideal para você e sua família
                    </p>
                    <div class="pt-3">
                        <button type="button" class="btn btn-outline-primary">Simular</button>
                    </div>
                </div>
                <div class="col-md-4 text-center border-bottom border-secondary bg-dark-subtle py-3">
                    <p class="h4 text-light">
                        Plano Individual/Familiar
                    </p>
                    <p class="pt-3 text-dark-emphasis">
                        Simule aqui o plano de saúde ideal para você e sua família
                    </p>
                    <div class="pt-3">
                        <button type="button" class="btn btn-outline-primary">Simular</button>
                    </div>
                </div>
                <div class="col-md-4 text-center border-bottom border-secondary bg-transparent py-3">
                    <p class="h4 text-light-emphasis">
                        Plano Individual/Familiar
                    </p>
                    <p class="pt-3 text-light-emphasis">
                        Simule aqui o plano de saúde ideal para você e sua família
                    </p>
                    <div class="pt-3">
                        <button type="button" class="btn btn-outline-primary">Simular</button>

                    </div>
                </div>
                <p></p>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>