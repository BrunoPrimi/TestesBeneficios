@using TestesBeneficios.Domain.DTO
@model SimulacaoDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beneficios.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Beneficios.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div>
        <header>
            <nav class="navbar bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">
                        <img src="~/images/logo.svg" alt="logo"
                             alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                        Bootstrap
                    </a>
                    <ul class="nav justify-content-end">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Login" class="nav-link active" aria-current="page" href="#">Login</a>
                        </li>
                        <li class="nav-item">
                            <a <a asp-action="Cadastro" asp-controller="Login" class="nav-link" href="#">Crie sua Conta</a>
                    </ul>
                </div>
            </nav>
        </header>
        <main role="main" class="pb-3">
            <div class="bg-image p-5 shadow-1-strong rounded mb-5 text-white"
                 style="background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/003.webp');height:100vh;">
                <div class="container">
                    <div class="card-transparent w-25">
                        <div class="card-body " style="padding-top:75px">
                            <p class="h1">
                                Simule planos
                                coletivos por adesão
                            </p>
                            <a asp-action="Index" asp-controller="TipoDeSimulacao" class="btn btn-outline-secondary">Vamos lá</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer class="border-end footer text-muted">
            <div class="container">
                &copy; 2022 - Beneficios.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>