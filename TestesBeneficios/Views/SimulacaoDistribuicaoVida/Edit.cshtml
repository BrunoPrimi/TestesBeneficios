@using TestesBeneficios.Domain.Enumeradores;
@model TestesBeneficios.Domain.DTO.SimulacaoDistribuicaoVidaDTO



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Produto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="AlcanceInicial" class="control-label"></label>
                    <input asp-for="AlcanceInicial" class="form-control" />
                    <span asp-validation-for="AlcanceInicial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AlcanceFinal" class="control-label"></label>
                    <input asp-for="AlcanceFinal" class="form-control" />
                    <span asp-validation-for="AlcanceFinal" class="text-danger"></span>
                </div>
                <div class="form-sample">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control " />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
                  <div class="form-group">
                <label asp-for="IdSimulacao" class="control-label"></label>
                <select asp-for="IdSimulacao" class="form-control" asp-items="@ViewBag.SimulacaoId"></select>
                <span asp-validation-for="IdSimulacao" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-dark btn-rounded btn-fw" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" type="button" class="btn btn-dark btn-rounded btn-fw">Voltar à Lista</a>
    </div>

</body>
</html>